extends partial/layout

block container
    include mixins/post
    .archive
        h2(class='archive-year')= 'Tags'
        script(type='text/javascript', charset='utf-8', src='/js/tagcloud.js')
        script(type='text/javascript', charset='utf-8', src='/js/tagcanvas.js')
        #myCanvasContainer.widget.tagcloud(align='center')
            canvas#resCanvas(width='600', height='500', align=center, style='max-width: 100%;')
                !=tagcloud()
            !=tagcloud()
    +postList()

block pagination
    include mixins/paginator
    +home()

block copyright
    include partial/copyright
